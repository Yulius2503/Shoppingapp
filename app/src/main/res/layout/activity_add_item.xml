<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AddItemActivity">


    <Button
        android:id="@+id/btnApple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="addApple"
        android:text="Apple"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnCheese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="addCheese"
        android:text="Cheese"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnRice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="addRice"
        android:text="Rice"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnPotato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="addPotato"
        android:text="Potato"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnCorn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="addCorn"
        android:text="Corn"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnGrape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="addGrape"
        android:text="Grape"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnBanana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="addBanana"
        android:text="Banana"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnTomato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="addTomato"
        android:text="Tomato"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnCabbage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="addCabbage"
        android:text="Cabbage"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnChili"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="addChili"
        android:text="Chili"
        tools:ignore="MissingConstraints" />

</LinearLayout>